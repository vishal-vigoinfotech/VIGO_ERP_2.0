@{
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}

<div class="row">
    <div class="col-sm-6 col-lg-6">
        <h6>Manage Salary Head</h6>
    </div>
    <div class="col-sm-6 col-lg-6 text-end">
        <h6 style="color:var(--primary);">PayRoll Setups <span class="text-success"> > Manage Salary Heads </span></h6>
    </div>

    <div class="g.col-12 bg-white p-2 mt-3">
        <h6>Salary Head List</h6>
        <button type="button" class="text-white cmp-btn no-hover-effect" data-bs-toggle="modal" data-bs-target="#modalSalaryHeadList">Add Company</button>
        @*<button class="btn text-white cmp-btn no-hover-effect">Add Company</button>*@
    </div>
    <div class="col-sm-12 bg-white p-1 mt-3">
        @*<h6 class="mb-3">Inactive/Active Company Report Details</h6>*@
        @*<h6 class="mb-3">Inactive/Active Company Report Details</h6>*@
        @*<button id="download-xlsx" class="mb-3 cmp_excel_btn">Excel</button>*@
        <div class="row mb-3 text-end">
            <div>
                <input type="search" id="payRollSearch"
                       placeholder="Search..."
                        >
            </div>
        </div>
        <div id="divPayRollDetails"></div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalSalaryHeadList" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="max-width:70vw !important;">

        <div class="modal-content" style="border-radius:0.2rem;">
            <form>
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Salary Component</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body container-fluid">
                    <div class="row  mb-2">
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-md-3 col-lg-3 glass-container">
                            <input type="text" id="txtComponentName" name="CompanyCode" required onchange="validateComponentName()" />
                            <label for="txtComponentName">Component Name  <span class="text-danger fw-bold">*</span></label>
                            <span id="lblerr_txtComponentName" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6 col-md-3 col-lg-3 glass-container">
                            <input type="text" id="txtDisplayName" name="DisplayName" required onchange="validateDisplayName()" />
                            <label for="txtDisplayName">Component Display Name <span class="text-danger fw-bold">*</span></label>
                            <span id="lblerr_txtDisplayName" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6 col-md-3 col-lg-3 glass-container">
                            <input type="text" id="txtShortCode" name="ShortCode" required onchange="validateShortCode()"/>
                            <label for="txtShortCode">Short Code <span class="text-danger fw-bold">*</span></label>
                            <span id="lblerr_txtShortCode" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6 col-md-3 col-lg-3 glass-container">
                            <input type="text" id="txtDisplayOrderPayslip" name="DisplayOrderPayslip" required onchange="validateDisplayOrderPayslip()"/>
                            <label for="txtDisplayOrderPayslip">Display Order in Payslip <span class="text-danger">*</span></label>
                            <span id="lblerr_txtDisplayOrderPayslip" class="text-danger"></span>
                        </div>
                    </div>
                    
                    @* Fourth Row *@
                    <div class="row   mt-3 mb-2">
                         
                    </div>
                    <div class="row">
                        <div class="col-sm-2 col-md-2 col-lg-3 radio-design-cmp">
                            <div class="div-radio-input">
                                <input type="radio" id="Earning" name="Earning" value="1" /> Earning
                            </div>
                        </div>
                        <div class="col-sm-2 col-md-2 col-lg-3 radio-design-cmp">
                            <div class="div-radio-input">
                                <input type="radio" id="Deduction" name="Deduction" value="1" /> Deduction
                            </div>
                        </div>
                        <div class="col-sm-2 col-md-2 col-lg-3 radio-design-cmp">
                            <div class="div-radio-input">
                                <input type="radio" id="Reimbursement" name="Reimbursement" value="1" /> Reimbursement
                            </div>
                        </div>
                        <div class="col-sm-2 col-md-2 col-lg-3 radio-design-cmp mt-2">
                            <div class="div-radio-input">
                                <input type="radio" id="ShowAttendance" name="ShowAttendance" value="1" /> Show in Attendance
                            </div>
                        </div>
                        <div class="col-sm-2 col-md-2 col-lg-3 radio-design-cmp mt-2">
                            <div class="div-radio-input">
                                <input type="radio" id="showInsalaryrate" name="showInsalaryrate" value="1" /> Show In Salary Rate
                            </div>
                        </div>
                        <div class="col-sm-2 col-md-2 col-lg-3 radio-design-cmp mt-2">
                            <div class="div-radio-input">
                                <input type="radio" id="IsActive" name="IsActive" value="1" /> Is Active
                            </div>
                        </div>
                        <div class="col-sm-2 col-md-2 col-lg-3 radio-design-cmp mt-2">
                            <div class="div-radio-input">
                                <input type="radio" id="IsDefault" name="IsDefault" value="1" /> Is Default
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="cmp_excel_btn" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn text-white" id="btnCreateSalaryHead" onclick="CreateSalaryHead(this);return false" style="background-color:var(--primary);">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        ViewSalaryReportComponent("VIEW");
    });
</script>