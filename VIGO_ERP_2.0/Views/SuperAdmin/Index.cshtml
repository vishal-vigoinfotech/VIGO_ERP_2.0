@{
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}

<style>
    .stats-card {
        border: none;
        border-radius: 16px;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    }

        .stats-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }

        .stats-card .card-body {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

    .icon-wrapper {
        width: 70px;
        height: 70px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: white;
    }

    .count {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0;
    }

    .label {
        color: #6c757d;
        font-size: 0.95rem;
        margin-bottom: 8px;
    }

    .trend-up {
        color: #28a745;
    }

    .trend-down {
        color: #dc3545;
    }
</style>
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <!-- Card 1: Total Users -->
    <div class="col">
        <div class="card stats-card bg-white">
            <div class="card-body">
                <div>
                    <p class="label">Total Employee</p>
                    <h3 class="count text-primary">0</h3>
                    <p class="trend-up fw-medium">
                        @*<i class="bi bi-arrow-up"></i>*@
                    </p>
                </div>
                <div class="icon-wrapper bg-primary">
                    <i class="bi bi-people-fill"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Card 2: Total Orders -->
    <div class="col">
        <div class="card stats-card bg-white">
            <div class="card-body">
                <div>
                    <p class="label">Total Module</p>
                    <h3 class="count text-success">0</h3>
                    <p class="trend-up fw-medium">
                        @*<i class="bi bi-arrow-up"></i>*@
                    </p>
                </div>
                <div class="icon-wrapper bg-success">
                    <i class="bi bi-cart-fill"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Card 3: Revenue -->
    <div class="col">
        <div class="card stats-card bg-white">
            <div class="card-body">
                <div>
                    <p class="label">Expire Contract</p>
                    <h3 class="count text-info">0</h3>
                    <p class="trend-down fw-medium">
                        @*<i class="bi bi-arrow-down"></i>*@  
                    </p>
                </div>
                <div class="icon-wrapper bg-info">
                    <i class="bi bi-currency-dollar"></i>
                </div>
            </div>
        </div>
    </div>
</div>
