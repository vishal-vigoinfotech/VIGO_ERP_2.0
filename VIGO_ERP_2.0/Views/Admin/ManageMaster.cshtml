
@{
    ViewBag.Title = "ManageMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    :root {
            --primary: #2563eb;
            --primary-dark: #1d4ed8;
            --gray-50: #f9fafb;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-500: #6b7280;
            --gray-700: #374151;
            --gray-900: #111827;
            --shadow: 0 4px 6px -1px rgba(0,0,0,0.1);
            --shadow-md: 0 10px 15px -3px rgba(0,0,0,0.1);
            --shadow-lg: 0 20px 25px -5px rgba(0,0,0,0.1);
            --radius: 12px;
            --transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
        }



    .container_manage_master {
        max-width: 1440px;
        margin: 0 auto;
        padding: 2rem;
        padding-top:0px;
    }

    .container_manage_master .header {
        border-radius: var(--radius);
        padding: 0.5rem;
        margin-bottom: 1rem;   
        text-align: center;
    }

        .container_manage_master .header h1 {
            font-size: 1.2rem;
            margin-top: 10px;
            font-weight: 600;
            color: var(--gray-900);
            margin-bottom: 5px;
        }

        .container_manage_master .header p {
            color: var(--gray-500);
            font-size: 0.9rem;
            font-weight: 400;
        }

        .container_manage_master .sections-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(100%, 1fr));
            gap: 2rem;
        }

        .container_manage_master .section-card {
            background: white;
            border-radius: var(--radius);
            overflow: hidden;
            box-shadow: var(--shadow-md);
            transition: var(--transition);
            border: 1px solid var(--gray-200);
        }

            .container_manage_master .section-card:hover {
                transform: translateY(-10px);
                box-shadow: var(--shadow-lg);
            }

        .container_manage_master .section-header {
            padding: 1.75rem 2rem;
            padding-bottom:0px;
            color: #000;
            display: flex;
            align-items: center;
            gap: 1rem;
            font-weight: 600;
        }

            .container_manage_master .section-header i {
                font-size: 1.6rem;
            }

            .container_manage_master .section-header h2 {
                font-size: 1.0rem;
            }

        .container_manage_master .modules-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 1.5rem;
            padding: 2.5rem;
        }

        .container_manage_master .module-item {
            background: var(--gray-50);
            border: 1px solid var(--gray-200);
            border-radius: var(--radius);
            padding: 1.0rem 0.5rem;
            text-align: center;
            cursor: pointer;
            transition: var(--transition);
            position: relative;
            overflow: hidden;
        }

            .container_manage_master .module-item::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 5px;
                background: var(--primary);
                transform: translateX(-100%);
                transition: var(--transition);
            }

            .container_manage_master .module-item:hover {
                background: white;
                border-color: var(--primary);
                transform: translateY(-8px);
                box-shadow: var(--shadow);
            }

                .container_manage_master .module-item:hover::before {
                    transform: translateX(0);
                }

        .container_manage_master .module-icon {
            width: 45px;
            height: 45px;
            background: var(--primary);
            color: white;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.0rem;
            font-size: 1.5rem;
            transition: var(--transition);
        }

        .container_manage_master .module-item:hover .module-icon {
            background: var(--primary-dark);
            transform: scale(1.12);
        }

        .container_manage_master .module-title {
            font-size: 0.90rem;
            font-weight: 500;
            color: var(--gray-700);
            line-height: 1.4;
        }

      
        .container_manage_master .system-master .module-item:hover {
            border-color: #dc2626;
        }
            .container_manage_master .system-master .module-item:hover .module-icon {
                background: #b91c1c;
            }

      
        .container_manage_master .crm-master .module-item:hover {
            border-color: #7c3aed;
        }
            .container_manage_master .crm-master .module-item:hover .module-icon {
                background: #6d28d9;
            }

     
        .container_manage_master .company-master .module-item:hover {
            border-color: #0891b2;
        }
            .container_manage_master .company-master .module-item:hover .module-icon {
                background: #0e7490;
            }


        @@media (max-width: 1280px) {
            .container_manage_master .modules-grid {
                grid-template-columns: repeat(5, 1fr);
            }
        }
        @@media (max-width: 900px) {
            .container_manage_master .modules-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }
        @@media (max-width: 640px) {
            .container_manage_master .container {
                padding: 1rem;
            }
            .container_manage_master .header h1 {
                font-size: 2rem;
            }
            .container_manage_master .modules-grid {
                grid-template-columns: 1fr;
                padding: 2rem 1.5rem;
            }
            .container_manage_master .sections-grid {
                grid-template-columns: 1fr;
            }
        }

    .container_manage_master .fade-up {
        opacity: 0;
        transform: translateY(40px);
        transition: all 0.7s ease;
    }

        .container_manage_master .fade-up.visible {
            opacity: 1;
            transform: translateY(0);
        }
</style>
<div class="container_manage_master">
    <header class="header">
        <h1><i class="fas fa-server"></i> Master Data Management</h1>
        <p>Centralized control and configuration for all system masters</p>
    </header>

    <div class="sections-grid">
        <!-- System Master -->
        <section class="section-card system-master fade-up">
            <div class="section-header">
                <i class="fas fa-cogs"></i>
                <h2>System Master</h2>
            </div>
            <div class="modules-grid">
                <div class="module-item mdm-module-designation" onclick="location.href='@Url.Action("ManageDesignation", "Admin")'">
                    <div class="module-icon"><i class="fas fa-user-tag"></i></div>
                    <p class="module-title">Manage Designation</p>
                </div>
                <div class="module-item mdm-module-region">
                    <div class="module-icon"><i class="fas fa-map-marked-alt"></i></div>
                    <p class="module-title">Manage Region</p>
                </div>
                <div class="module-item mdm-module-region-relation">
                    <div class="module-icon"><i class="fas fa-sitemap"></i></div>
                    <p class="module-title">Manage Region Relation</p>
                </div>
                <div class="module-item mdm-module-department">
                    <div class="module-icon"><i class="fas fa-building"></i></div>
                    <p class="module-title">Manage Department</p>
                </div>
                <div class="module-item mdm-module-branch">
                    <div class="module-icon"><i class="fas fa-code-branch"></i></div>
                    <p class="module-title">Manage Branch</p>
                </div>
                <div class="module-item mdm-module-document">
                    <div class="module-icon"><i class="fas fa-file-alt"></i></div>
                    <p class="module-title">Manage Document</p>
                </div>
                <div class="module-item mdm-module-city-district">
                    <div class="module-icon"><i class="fas fa-city"></i></div>
                    <p class="module-title">Manage City/District</p>
                </div>
                <div class="module-item mdm-module-license-group">
                    <div class="module-icon"><i class="fas fa-shield-alt"></i></div>
                    <p class="module-title">License-Group Master</p>
                </div>
            </div>
        </section>

        <!-- CRM Master -->
        <section class="section-card crm-master fade-up">
            <div class="section-header">
                <i class="fas fa-users-cog"></i>
                <h2>CRM Master</h2>
            </div>
            <div class="modules-grid">
                <div class="module-item mdm-module-lead-action">
                    <div class="module-icon"><i class="fas fa-bolt"></i></div>
                    <p class="module-title">Manage Lead Action</p>
                </div>
                <div class="module-item mdm-module-lead-source">
                    <div class="module-icon"><i class="fas fa-filter"></i></div>
                    <p class="module-title">Manage Lead Source</p>
                </div>
                <div class="module-item mdm-module-lead-stage">
                    <div class="module-icon"><i class="fas fa-tasks"></i></div>
                    <p class="module-title">Manage Lead Stage</p>
                </div>
                <div class="module-item mdm-module-lead-status">
                    <div class="module-icon"><i class="fas fa-flag"></i></div>
                    <p class="module-title">Manage Lead Status</p>
                </div>
                <div class="module-item mdm-module-follow-up">
                    <div class="module-icon"><i class="fas fa-clock"></i></div>
                    <p class="module-title">Manage Follow Up Status</p>
                </div>
                <div class="module-item mdm-module-enquiry-status">
                    <div class="module-icon"><i class="fas fa-question-circle"></i></div>
                    <p class="module-title">Manage Enquiry Status</p>
                </div>
                <div class="module-item mdm-module-industry-risk">
                    <div class="module-icon"><i class="fas fa-exclamation-triangle"></i></div>
                    <p class="module-title">Manage Industry Risk Type</p>
                </div>
                <div class="module-item mdm-module-requirement-rate">
                    <div class="module-icon"><i class="fas fa-percentage"></i></div>
                    <p class="module-title">Manage Requirement Rate Type</p>
                </div>
                <div class="module-item mdm-module-services-type">
                    <div class="module-icon"><i class="fas fa-concierge-bell"></i></div>
                    <p class="module-title">Manage Services Type</p>
                </div>
                <div class="module-item mdm-module-office-type">
                    <div class="module-icon"><i class="fas fa-briefcase"></i></div>
                    <p class="module-title">Manage Office Type</p>
                </div>
            </div>
        </section>

        <!-- Company Master -->
        <section class="section-card company-master fade-up">
            <div class="section-header">
                <i class="fas fa-building"></i>
                <h2>Company Master</h2>
            </div>
            <div class="modules-grid">
                <div class="module-item mdm-module-company">
                    <div class="module-icon"><i class="fas fa-industry"></i></div>
                    <p class="module-title">Manage Company</p>
                </div>
              
            </div>
        </section>
    </div>
</div>
<script src="~/Content/Javascript/Setting/ManageMaster.js"></script>