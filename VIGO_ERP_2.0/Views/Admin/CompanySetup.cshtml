@{
    ViewBag.Title = "CompanySetup";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<style>


    .section {
        padding: 10px 30px;
        border-bottom: 1px solid #e2e8f0;
    }

        .section:last-of-type {
            border-bottom: none;
        }



    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 24px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }

    .buttons_setup {
        display: flex;
        justify-content: end;
        padding: 10px 30px;
    }

        .buttons_setup .buttons {
            padding: 25px 30px;
            text-align: right;
            background-color: #f8fafc;
            border-top: 1px solid #e2e8f0;
        }

        .buttons_setup button {
            padding: 12px 28px;
            border: none;
            border-radius: 12px;
            font-size: 1em;
            font-weight: 600;
            cursor: pointer;
            margin-left: 15px;
            transition: all 0.3s ease;
            min-width: 120px;
        }

        .buttons_setup .btn-cancel {
            background-color: #e2e8f0;
            color: #4a5568;
        }

            .buttons_setup .btn-cancel:hover {
                background-color: #cbd5e0;
                transform: translateY(-2px);
            }

        .buttons_setup .btn-save {
            background: linear-gradient(120deg, #48bb78 0%, #38a169 100%);
            color: white;
            box-shadow: 0 4px 15px rgba(72, 187, 120, 0.3);
        }

            .buttons_setup .btn-save:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(72, 187, 120, 0.4);
            }

    @@media (max-width: 768px) {
        .form-grid {
            grid-template-columns: 1fr;
        }

        .buttons_setup .buttons {
            text-align: center;
        }

        .buttons_setup button {
            width: 100%;
            margin: 10px 0;
        }

        .heading-employee,
        .heading-client,
        .heading-crm {
            font-size: 1.4em;
            padding: 8px 0 18px 0;
        }
    }

    .setup_footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .changes_update {
        padding-left: 30px;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 30px;
    }

    #modifiedAt, #modifiedBy {
        color: rgb(55 48 163 / var(--tw-bg-opacity, 1));
        font-size: 14px;
    }
</style>

