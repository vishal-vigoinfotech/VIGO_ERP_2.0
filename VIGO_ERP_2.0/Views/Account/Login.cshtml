
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SMART ERP - Login</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- AOS Library -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            height: 100vh;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #ffffff;
        }

        .container {
            display: flex;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        .features-side {
            flex: 2;
            background: url('../../Assets/Website_Assets/banner-login.jpg');
            background-size: cover;
            background-position: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 40px 0px;
        }

        .login-side {
            flex: 1;
            padding: 10px 0px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
        }

        .login-header {
            text-align: center;
        }

            .login-header img {
                height: 90px;
                filter: drop-shadow(0 10px 25px rgba(0,0,0,0.25));
            }

            .login-header h1 {
                font-size: 22px;
                font-weight: 700;
                background: linear-gradient(135deg, #ff5722, #4f46e5);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

        .form-container {
            background: rgba(255, 255, 255, 0.25);
            padding: 10px 40px;
            border-radius: 28px;
            backdrop-filter: blur(25px);
            -webkit-backdrop-filter: blur(25px);
            border: 1px solid rgba(255, 255, 255, 0.4);
        }

        .form-group {
            position: relative;
            margin-bottom: 25px;
        }

            .form-group input {
                width: 100%;
                padding: 10px 20px;
                border: none;
                border-radius: 16px;
                background: rgba(255, 255, 255, 0.3);
                backdrop-filter: blur(10px);
                -webkit-backdrop-filter: blur(10px);
                font-size: 15px;
                color: #1e293b;
                transition: all 0.5s ease;
                box-shadow: 0 8px 20px rgba(0,0,0,0.1);
            }

                .form-group input:focus {
                    outline: none;
                    background: rgba(255, 255, 255, 0.5);
                    box-shadow: 0 15px 35px rgba(79,70,229,0.3);
                    transform: translateY(-3px);
                }

                .form-group input::placeholder {
                    color: transparent;
                }

            .form-group label {
                position: absolute;
                top: 6px;
                left: 20px;
                font-size: 15px;
                color: #64748b;
                pointer-events: none;
                transition: all 0.4s ease;
                background: rgba(255, 255, 255, 0.7);
                padding: 0 12px;
                border-radius: 8px;
            }

            .form-group input:focus ~ label,
            .form-group input:valid ~ label {
                top: -12px;
                font-size: 14px;
                color: #4f46e5;
                font-weight: 700;
            }

            .form-group input:focus,
            .form-group input:valid {
                background: #fff;
            }

            .form-group i {
                position: absolute;
                right: 20px;
                top: 9px;
                color: #94a3b8;
                font-size: 20px;
                transition: all 0.4s;
            }

            .form-group input:focus ~ i {
                color: #4f46e5;
                top: 9px;
            }

        .password-toggle {
            cursor: pointer;
        }

        .options {
            display: flex;
            justify-content: space-between;
            margin-bottom: 25px;
            font-size: 14px;
        }

            .options a {
                color: #4f46e5;
                text-decoration: none;
                font-weight: 600;
                font-size: 13px;
            }

            .options label {
                font-size: 13px;
                display: flex;
                align-items: center;
                gap: 10px;
            }

        .login-btn {
            width: 100%;
            padding: 12px 22px;
            background: linear-gradient(135deg, #4f46e5, #6366f1);
            color: white;
            border: none;
            border-radius: 18px;
            font-size: 17px;
            font-weight: 700;
            cursor: pointer;
            box-shadow: 0 20px 40px rgba(79,70,229,0.45);
            transition: all 0.5s ease;
        }

            .login-btn:hover {
                transform: translateY(-6px);
                box-shadow: 0 30px 60px rgba(79,70,229,0.55);
            }

        .social-links {
            text-align: center;
            margin: 10px 0 35px;
            margin-bottom: 0px;
        }

            .social-links a {
                margin: 0 18px;
                color: #94a3b8;
                font-size: 26px;
                transition: all 0.4s;
            }

                .social-links a:hover {
                    color: #4f46e5;
                    transform: translateY(-10px) scale(1.4);
                }

        .support {
            font-size: 14px;
            color: #64748b;
            text-align: center;
            font-weight: 500;
        }

            .support a {
                color: #4f46e5;
                font-weight: 600;
            }

        /* Responsive */
        @@media (max-width: 992px) {
            .container {
                flex-direction: column;
            }

            .features-side {
                min-height: 380px;
            }

            .login-side {
                padding: 50px;
            }

            .form-container {
                padding: 50px 40px;
            }
        }

        #toastContainer {
            position: fixed;
            top: 10px;
            right: 10px;
            z-index: 9999;
        }

        .toast-card {
            min-width: 320px;
            max-width: 420px;
            border-radius: 12px;
            padding: 10px 18px;
            margin-bottom: 14px;
            display: flex;
            align-items: center;
            gap: 14px;
            box-shadow: 0 20px 45px rgba(0,0,0,.22);
            transform: translateX(120%);
            opacity: 0;
            transition: all .55s cubic-bezier(.22,1,.36,1);
            color: #fff;
        }

            /* SHOW / HIDE */
            .toast-card.show {
                transform: translateX(0);
                opacity: 1;
            }

            .toast-card.hide {
                transform: translateX(120%);
                opacity: 0;
            }

        /* ICON – SOLID COLOR ONLY */
        .toast-icon {
            width: 42px;
            height: 42px;
            border-radius: 50%;
            display: grid;
            place-items: center;
            color: #fff;
            font-size: 18px;
            background: rgba(0,0,0,.25);
        }

        /* TEXT */
        .toast-text {
            flex: 1;
            font-size: 14px;
            font-weight: 500;
            line-height: 1.4;
        }

        /* ===== SUCCESS ===== */
        .toast-success {
            background: linear-gradient(135deg, #2ecc71, #27ae60);
            border-left: 4px solid #1e8449;
        }

            .toast-success .toast-icon {
                background: #1e8449;
            }

        /* ===== ERROR ===== */
        .toast-error {
            background: linear-gradient(135deg, #ff4d4f, #c0392b);
            border-left: 4px solid #922b21;
        }

            .toast-error .toast-icon {
                background: #922b21;
            }

        /* ===== WARNING ===== */
        .toast-warning {
            background: linear-gradient(135deg, #f39c12, #e67e22);
            border-left: 4px solid #b9770e;
        }

            .toast-warning .toast-icon {
                background: #b9770e;
            }
    </style>
</head>
<body>
    <div class="container">
        <!-- Left Side -->
        <div class="features-side"></div>

        <!-- Right Side -->
        <div class="login-side">
            <div class="login-header">
                <img src="~/Assets/Website_Assets/smartdutylogo.png" />
                <h1><span>VIGO</span> SMART ERP</h1>
            </div>

            <div class="form-container" data-aos="zoom-in" data-aos-duration="1200">
                <form id="loginForm">
                    <div class="form-group" data-aos="zoom-in" data-aos-delay="300">
                        <input type="text" id="partnerCode" required>
                        <label>Partner Code</label>
                        <i class="fas fa-building"></i>
                    </div>

                    <div class="form-group" data-aos="zoom-in" data-aos-delay="500">
                        <input type="text" id="userId" required>
                        <label>User ID</label>
                        <i class="fas fa-user"></i>
                    </div>

                    <div class="form-group" data-aos="zoom-in" data-aos-delay="700">
                        <input type="password" id="password" required>
                        <label>Password</label>
                        <i class="fas fa-lock"></i>
                        <i class="fas fa-eye password-toggle" id="togglePassword"></i>
                    </div>

                    <div class="options" data-aos="fade-up" data-aos-delay="900">
                        <label><input type="checkbox"> Remember Me?</label>
                        <a href="#">Forgot Password?</a>
                    </div>

                    <button type="submit" class="login-btn" data-aos="zoom-in" data-aos-delay="1100">Login</button>
                    <div id="loginError" class="alert alert-danger" style="display:none;"></div>
                </form>

                <div class="social-links" data-aos="" data-aos-delay="1300">
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-facebook"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-linkedin"></i></a>
                </div>

                <div class="support" data-aos="" data-aos-delay="1500">
                    <div>
                        <i class="fa-solid fa-phone"></i> : <strong>+91 9321396670</strong>
                    </div>
                    <div>
                        <i class="fa-solid fa-message"></i> : <a href="mailto:helpdesk@vigoinfotech.com">helpdesk@vigoinfotech.com</a>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div id="toastContainer"></div>



    <script>
        AOS.init({ once: true, easing: 'ease-out-cubic' });

        $(document).ready(function () {

            $("#loginForm").on("submit", function (e) {
                e.preventDefault();

                let data = {
                    CompanyCode: $("#partnerCode").val(),
                    UserId: $("#userId").val(),
                    Password: $("#password").val()
                };

                $.ajax({
                    url: '/Account/Login',
                    type: 'POST',
                    data: data,
                    success: function (res) {
                        if (res.success) {
                            showToast("Login successful", "success");
                            window.location.href = res.redirectUrl;
                        } else {
                            showToast(res.message, "error");
                            //showToast("Login successful", "success"); // green
                            //showToast("Password will expire soon", "warning"); // yellow
                        }
                    },
                    error: function () {
                        showToast("something went wrong !", "error");
                    }
                });
            });

        });

        $('#togglePassword').click(function () {
            const pw = $('#password');
            const type = pw.attr('type') === 'password' ? 'text' : 'password';
            pw.attr('type', type);
            $(this).toggleClass('fa-eye fa-eye-slash');
        });


    </script>

    <script>

        function showToast(message, type = "error") {

            const icons = {
                success: "✔",
                error: "✖",
                warning: "⚠"
            };

            const toast = $(`
                    <div class="toast-card toast-${type}">
                        <div class="toast-icon">${icons[type]}</div>
                        <div class="toast-text">${message}</div>
                    </div>
                `);

            $("#toastContainer").append(toast);

            // SHOW
            setTimeout(() => toast.addClass("show"), 50);

            // AUTO HIDE
            setTimeout(() => {
                toast.removeClass("show").addClass("hide");
                setTimeout(() => toast.remove(), 500);
            }, 3000);
        }



    </script>




</body>
</html>