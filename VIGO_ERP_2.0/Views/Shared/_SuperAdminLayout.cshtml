                gap: 10px;
            }

            #preloader.Inactive {
                display: none;
                flex-direction: column;
                gap: 10px;
            }

        .loader {
            position: relative;
            width: 100px;
            height: 100px;
        }

            .loader img {
                width: 65px;
                position: absolute;
                top: 55%;
                left: 50%;
                transform: translate(-50%, -50%);
                z-index: 2;
            }

        .spinner {
