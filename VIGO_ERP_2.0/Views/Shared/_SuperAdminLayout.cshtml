        #toastContainer {
            position: fixed;
            top: 10px;
            right: 10px;
            z-index: 99999;
        }

        .toast-card {
            min-width: 320px;
            max-width: 420px;
            border-radius: 12px;
            padding: 10px 18px;
            margin-bottom: 14px;
            display: flex;
            align-items: center;
            gap: 14px;
            box-shadow: 0 20px 45px rgba(0,0,0,.22);
            transform: translateX(120%);
            opacity: 0;
            transition: all .55s cubic-bezier(.22,1,.36,1);
            color: #fff;
        }

            /* SHOW / HIDE */
            .toast-card.show {
                transform: translateX(0);
                opacity: 1;
            }

            .toast-card.hide {
                transform: translateX(120%);
                opacity: 0;
            }

        /* ICON – SOLID COLOR ONLY */
        .toast-icon {
            width: 42px;
            height: 42px;
            border-radius: 50%;
            display: grid;
            place-items: center;
            color: #fff;
            font-size: 18px;
            background: rgba(0,0,0,.25);
        }

        /* TEXT */
        .toast-text {
            flex: 1;
            font-size: 14px;
            font-weight: 500;
            line-height: 1.4;
        }

        /* ===== SUCCESS ===== */
        .toast-success {
            background: linear-gradient(135deg, #2ecc71, #27ae60);
            border-left: 4px solid #1e8449;
        }

            .toast-success .toast-icon {
                background: #1e8449;
            }

        /* ===== ERROR ===== */
        .toast-error {
            background: linear-gradient(135deg, #ff4d4f, #c0392b);
            border-left: 4px solid #922b21;
        }

            .toast-error .toast-icon {
                background: #922b21;
            }

        /* ===== WARNING ===== */
        .toast-warning {
            background: linear-gradient(135deg, #f39c12, #e67e22);
            border-left: 4px solid #b9770e;
        }

            .toast-warning .toast-icon {
                background: #b9770e;
            }

        #preloader {
